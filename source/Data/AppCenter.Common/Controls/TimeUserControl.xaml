<UserControl x:Class="SoonLearning.AppCenter.Controls.TimeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lang="clr-namespace:SoonLearning.AppCenter.Common.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">
    
    <StackPanel x:Name="timerPanel"
                Orientation="Horizontal">
        <Label Content="{x:Static lang:Resources.LeftTime}" 
               FontSize="20"
               VerticalAlignment="Center"/>
        <Label x:Name="leftTimeLabel"
               FontSize="24"
               VerticalAlignment="Center"
               Content="--:--">
            <Label.Effect>
                <DropShadowEffect BlurRadius="6" />
            </Label.Effect>
        </Label>
    </StackPanel>
    
</UserControl>
