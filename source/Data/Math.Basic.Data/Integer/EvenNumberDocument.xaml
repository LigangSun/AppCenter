<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">非0的自然数能被2整除的数叫做偶数。</Run>
        <LineBreak />
    </Paragraph>

    <Paragraph>
        <Run FontSize="36">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">在序列数中找出是</Run>
        <Run FontSize="30">偶数的数。</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">0, 5, 6, 18, 20, 23, 27, 28, 39, 41, 55, 64, 71, 81, 98, 100</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30" Foreground="Black">答案：</Run>
        <Run FontSize="28" Foreground="LightGray">6, 18, 20, 28, 64, 98, 100</Run>
    </Paragraph>
</FlowDocument>
