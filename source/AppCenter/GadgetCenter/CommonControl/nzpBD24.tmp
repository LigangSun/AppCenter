<UserControl x:Class="SoonLearning.AppCenter.Controls.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lang="clr-namespace:SoonLearning.AppCenter.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">
    
    <StackPanel x:Name="timerPanel"
                Orientation="Horizontal">
        <TextBlock Text="{x:Static lang:Strings.LeftTime}" 
                   FontSize="20"
                   VerticalAlignment="Center"/>
        <TextBlock x:Name="leftTimeLabel"
                   FontSize="24"
                   VerticalAlignment="Center"
                   Text="--:--">
        </TextBlock>
    </StackPanel>
    
</UserControl>
