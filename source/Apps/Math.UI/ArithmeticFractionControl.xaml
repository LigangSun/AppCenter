<UserControl x:Class="SoonLearning.Math.UI.ArithmeticFractionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal"
                x:Name="rootPanel">

        <Label x:Name="withLabel" 
               VerticalAlignment="Center"
               Visibility="Hidden"/>
        <StackPanel Orientation="Vertical"
                    x:Name="rightPanel">
            <Label x:Name="umeratorLabel" HorizontalAlignment="Center"/>
            <Rectangle x:Name="seperatorRect" Height="2" />
            <Label x:Name="denominatorLabel" HorizontalAlignment="Center"/>
        </StackPanel>

    </StackPanel>
</UserControl>
