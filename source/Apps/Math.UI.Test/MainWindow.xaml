<Window x:Class="Math.UI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" 
        xmlns:my="clr-namespace:SoonLearning.Math.UI;assembly=SoonLearning.Math.UI">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        
        <my:MathEditorControl HorizontalAlignment="Left"
                              Name="mathEditorControl1" 
                              VerticalAlignment="Top"/>
        
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    Margin="3">
            <Button Content="插入指数幂"
                    Width="120"
                    Margin="3"
                    Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
