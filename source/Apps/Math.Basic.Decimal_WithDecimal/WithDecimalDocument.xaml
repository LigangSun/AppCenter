<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">整数部分不是零的小数，叫做带小数。</Run>
        <LineBreak />
    </Paragraph>

    <Paragraph>
        <Run FontSize="36">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">在序列小数中哪些是带小数</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">1.26, 7, 0.38, 0.09, 1.75, 0.18, 1.85</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30" Foreground="Black">答案：</Run>
        <Run FontSize="28" Foreground="LightGray">是带小数的有1.26, 1.75, 1.85。</Run>
    </Paragraph>
</FlowDocument>
