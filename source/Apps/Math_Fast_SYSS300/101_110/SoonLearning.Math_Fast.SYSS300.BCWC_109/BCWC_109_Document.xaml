<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">变乘为除法，，可利用公式</Run>
        <LineBreak />
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">10ma+nma</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">进行速算，其中m为被乘数，a为小数字，n为倍数。</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="32">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">92×24=</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28" Foreground="Black">解答：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black"> 92×24</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=10×92×2+2×92×2</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=1840+368</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=2208</Run>
    </Paragraph>
</FlowDocument>