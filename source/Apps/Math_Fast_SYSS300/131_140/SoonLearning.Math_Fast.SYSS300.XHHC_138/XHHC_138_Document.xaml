<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">先和后乘法，运用乘法分配率进行速算时，可进行顺向思维。可利用公式</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">(a+b)×c=ac+bc</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">进行速算。</Run>
        <LineBreak />
    </Paragraph>
    <Paragraph>
        <Run FontSize="32">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">113×87+113×13=</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28" Foreground="Black">解答：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">113×87+113×13</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=113×(87+13)</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=113×100</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=11300</Run>
    </Paragraph>
</FlowDocument>