<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">先乘后和法，运用乘法分配率进行速算时，可进行逆向思维。可利用公式</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">ac+bc=(a+b)×c</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">进行速算。</Run>
        <LineBreak />
    </Paragraph>
    <Paragraph>
        <Run FontSize="32">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">(25+125)×80=</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28" Foreground="Black">解答：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black"> (25+125)×80</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=25×80+125×80</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=2000+10000</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=12000</Run>
    </Paragraph>
</FlowDocument>