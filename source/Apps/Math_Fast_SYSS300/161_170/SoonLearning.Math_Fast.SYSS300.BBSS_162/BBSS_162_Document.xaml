<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              ColumnWidth="400" FontSize="30" FontFamily="宋体"
              Foreground="Black">
    <Paragraph>
        <Run FontSize="36">定义：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">8倍速算法，8与某数相乘时，可先将某数扩大10倍后，再减去某数的2倍。可用公式</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">a×8=a×10-a×2</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="30">进行速算。</Run>
        <LineBreak />
    </Paragraph>
    <Paragraph>
        <Run FontSize="32">举例：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28">36×8=</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="28" Foreground="Black">解答：</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black"> 36×8</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=36×10-36×2</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=360-72</Run>
    </Paragraph>
    <Paragraph>
        <Run FontSize="24" Foreground="Black">=288</Run>
    </Paragraph>
</FlowDocument>