<Page x:Class="SoonLearning.BlockPuzzle.Help.GoalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lang="clr-namespace:SoonLearning.BlockPuzzle.Properties"
      mc:Ignorable="d" 
      Background="Transparent"
      d:DesignHeight="300" d:DesignWidth="300"
	Title="GoalPage">

    <Grid Background="Transparent"
          VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="{x:Static lang:Resources.GoalText}"
                   Foreground="{StaticResource TextColorBrush_Light}"
                   FontSize="20"
                   FontWeight="Medium"
                   TextWrapping="Wrap">

        </TextBlock>
    </Grid>
</Page>
