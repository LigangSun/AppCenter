<UserControl x:Class="Math.Basic.UserControls.ESQuestionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mathUI="clr-namespace:SoonLearning.Math.UI;assembly=SoonLearning.Math.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300"
             Initialized="UserControl_Initialized">
    <Grid Margin="80, 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel x:Name="questionBodyPanel" 
                    Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,0"/>

        <mathUI:RichEditUserControl x:Name="answerEditControl"
                                    Grid.Row="1"
                                    FontSize="20"
                                    Margin="0"/>
        
    </Grid>
</UserControl>
